<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pandemicpal">

    <application
        android:allowBackup="true"
        android:icon="@drawable/food_bowl"
        android:label="@string/app_name"
        android:roundIcon="@drawable/food_bowl"
        android:supportsRtl="true"
        android:theme="@style/Theme.PandemicPal">
        <activity android:name=".PetDeadActivity"></activity>
        <activity android:name=".PetSetupNameActivity" />
        <activity android:name=".PetSetupActivity" />
        <activity android:name=".MoreOptionsActivity" />
        <activity android:name=".PetPageActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>